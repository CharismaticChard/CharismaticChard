<% include head.ejs%>

    <div class="container profile-top">
        <image />
        <% if (user.email) { %>      
        <div class= "profile">
            <h2><b><%= user.display %></b></h2><br>
        </div>
    </div>
        <div class="profile-info">
      
            <div class="profile-email-phone-info">
                <strong>email</strong>: <%= user.email %><br>
                <strong>phone</strong>: <%= user.phone %>
            </div>
            <div class="profile-delete-update-buttons">
                <a href="/update-profile" class="btn btn-default">Update Profile</a>
                <a href="/api/data_allocator/delete-profile" onclick="return confirm('Are you sure you want to delete your account? \nOnce you delete it, you will not be able to recover it!');" class="btn btn-default">Delete Account</a>
                <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
            </div>
        </div>

        <div class="signin-form">
            <a href="/" class="homeSplitButton btn">HOME</a>
            <a href="/logout" class="homeSplitButton btn">Log Out</a>
        </div>


